<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp">

    <ImageView
        android:id="@+id/photo_real_estate_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/name_real_estate_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/photo_real_estate_item"
        tools:text="Duplex"/>

    <TextView
        android:id="@+id/city_real_estate_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toRightOf="@id/photo_real_estate_item"
        app:layout_constraintTop_toBottomOf="@id/name_real_estate_item"
        tools:text="Liverpool" />

     <TextView
         android:id="@+id/price_real_estate_item"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="16sp"
         android:textStyle="bold"
         android:ellipsize="end"
         android:singleLine="true"
         android:layout_margin="4dp"
         app:layout_constraintTop_toBottomOf="@id/city_real_estate_item"
         app:layout_constraintLeft_toRightOf="@id/photo_real_estate_item"
         app:layout_constraintBottom_toBottomOf="parent"
         tools:text="$13,550,000" />


</androidx.constraintlayout.widget.ConstraintLayout>